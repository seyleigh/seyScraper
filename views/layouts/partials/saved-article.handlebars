
    <div class="col-md-6">
        <div class="card m-3">
            <div class="card-body overflow-auto">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{summary}}</p>
                <a href="{{link}}" target="_blank" class="card-link">{{link}}</a><br>
                <button type="button" class="btn btn-sm btn-danger mt-2 delete" data-id={{_id}}><i class="far fa-times-circle"></i> Delete</button>
                <button type="button" class="btn btn-sm btn-info mt-2 addNote" data-toggle="modal" data-target="#noteModal{{_id}}" data-id={{_id}}>Add/View Notes</button>
            </div>
        </div>
    </div>